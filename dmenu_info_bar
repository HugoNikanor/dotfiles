#!/bin/bash
ws=$(wmctrl -d | tr '\n' ' ' | sed 's/.*\([0-9]\)  \*.*/\1/')
ws=$(($ws + 1))

# TODO possibly allow for continius commands
cmdOut="$(echo -e "Workspace: $ws\nDate: $(date)\n$(upower -i $(upower -e | grep battery) | grep percentage)"|\
	dmenu |\
	/bin/bash)"
if [ -n "$cmdOut" ]; then
	echo "$cmdOut" | dmenu -nb "Dark Slate Gray" -l 20
fi
