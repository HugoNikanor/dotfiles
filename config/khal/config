[calendars]

[[calendars]]
path = ~/.local/var/cal/*
type = discover

[default]
default_calendar = "Calendar"
print_new = event

[locale]
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M

[view]
agenda_event_format = "{cancelled}{title} {calendar-color}{repeat-symbol}{start-style}{to-style}{end-style} -- {location}{reset}"
# event_format = "{cancelled}{title} {calendar-color}{repeat-symbol}{start-style}{to-style}{end-style} -- {location}{reset}"
