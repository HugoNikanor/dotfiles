#!/bin/bash

path="$(dirname "$(realpath "$0")")"
ln -s "$path/bashrc"            ~/.bashrc
ln -s "$path/gitconfig"         ~/.gitconfig
ln -s "$path/gitignore_global"  ~/.gitignore_global
ln -s "$path/inputrc"           ~/.inputrc
ln -s "$path/lynxrc"            ~/.lynxrc
ln -s "$path/tmux.conf"         ~/.tmux.conf
ln -s "$path/vimrc"             ~/.vimrc
ln -s "$path/bash_aliases"      ~/.bash_aliases
ln -s "$path/bash_profile"      ~/.bash_profile
ln -s "$path/xinitrc"           ~/.xinitrc
ln -s "$path/xmonad"            ~/.xmonad # This currently creates a recursize symilnk
ln -s "$path/Xresources"        ~/.Xresources
ln -s "$path/start_tmux"        ~/.start_tmux
ln -s "$path/kill_window"       ~/.kill_window
ln -s "$path/dmenu_info_bar"    ~/.dmenu_info_bar

ln -s "$path/termite-config"    ~/.config/termite/config

ELINK_DIR="~/.elinks"
if [ -d "`eval echo ${ELINK_DIR//>}`" ]; then
	ln -s "$path/elinks.conf" ~/.elinks/elinks.conf
fi
