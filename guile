;;; -*- mode: scheme -*-

;; maybe install modules in /usr/lib or simmilar
(let ((home (getenv "HOME")))
  (for-each
    (lambda (path-part)
      (add-to-load-path (string-append home path-part)))
    '("/lib/guile" "/code/guile")))

(define (writeln x) (write x) (newline))

(define (higher-order-show show-func data port)
  (if port
    (begin
      (show-func data port)
      (newline port))
    (begin
      (show-func data)
      (newline))))
(define* (writeln data #:optional (port #f))
         (higher-order-show write data port))
(define* (displayln data #:optional (port #f))
         (higher-order-show display data port))

           
                    

(define-macro (l file)
  `(load ,(string-append
            (symbol->string file)
            ".scm")))

(define-syntax thunk
  (syntax-rules ()
    ((_ body ...)
     (lambda () body ...))))

(use-modules (ice-9 readline))
(activate-readline)


