" My GVim is set up to be a quick note window.
" This means that 80x24 characters, and no decorations
set lines=24 columns=80
" disables all silly gui stuff
set guioptions-=m
set guioptions-=T
set guioptions-=r
set guioptions-=L

set nonumber
set laststatus=0

set novisualbell

set noruler
set noshowcmd
set statusline=""

colorscheme darkblue
